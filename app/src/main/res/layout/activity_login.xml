<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_142"
        android:gravity="center"
        android:textColor="@color/text_color_6"
        android:layout_gravity="center_horizontal"
        android:text="登陆"
        android:textSize="@dimen/gout_tsize_56" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_line" />

    <EditText
        android:id="@+id/login_tv_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_120"
        android:layout_marginLeft="@dimen/space_60"
        android:layout_marginRight="@dimen/space_60"
        android:layout_marginTop="@dimen/space_210"
        android:background="@drawable/bg_edittext"
        android:hint="请输入用户名/手机号"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="@dimen/space_30"
        android:singleLine="true"
        android:textColor="@color/text_color_9"
        android:textColorHint="@color/text_color_c"
        android:textSize="@dimen/gout_tsize_46" />


    <EditText
        android:id="@+id/login_tv_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_120"
        android:layout_marginLeft="@dimen/space_60"
        android:layout_marginRight="@dimen/space_60"
        android:layout_marginTop="@dimen/space_20"
        android:background="@drawable/bg_edittext"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="11"
        android:paddingLeft="30px"
        android:singleLine="true"
        android:textColor="@color/text_color_9"
        android:textColorHint="@color/text_color_c"
        android:textSize="@dimen/gout_tsize_46" />


    <Button
        android:id="@+id/login_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_120"
        android:layout_marginLeft="@dimen/space_60"
        android:layout_marginRight="@dimen/space_60"
        android:layout_marginTop="@dimen/space_40"
        android:background="@drawable/btn_login_bg"
        android:text="登录"
        android:textColor="#ffffffff"
        android:textSize="@dimen/space_50" />


    <CheckBox
        android:id="@+id/login_cbx_remenber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_60"
        android:paddingLeft="6dp"
        android:textColor="@color/text_color_9"
        android:textSize="@dimen/gout_tsize_40"
        android:button="@drawable/checkbox_bg"
        android:layout_marginTop="@dimen/space_30"
        android:text="记住密码, 45天免登录" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_btn_sos"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_180"
        android:background="@null"
        android:src="@drawable/btn_sos_bg" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/login_btn_register"
        android:layout_height="wrap_content"
        android:textColor="@drawable/btn_color_bg"
        android:layout_marginTop="@dimen/space_210"
        android:textSize="@dimen/gout_tsize_46"
        android:gravity="center"
        android:text="新用户注册>>"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/space_90"
        android:layout_marginLeft="@dimen/space_60"
        android:layout_marginRight="@dimen/space_60"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="center_vertical"
            android:background="@color/main_line" />
        <TextView
            android:layout_width="100dp"
            android:gravity="center"
            android:textSize="@dimen/gout_tsize_36"
            android:textColor="@color/text_color_9"
            android:background="@color/main_background"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="第三方登录"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/space_30"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/login_btn_byqq"
            android:layout_height="wrap_content"
            android:background="@drawable/login_qq"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/space_60"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn_bywchat"
            android:background="@drawable/login_wchat"/>
    </LinearLayout>
</LinearLayout>