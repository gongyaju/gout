<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_142"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/address_btn_goback"
            android:layout_width="@dimen/space_120"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/go_back_brack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="新增地址"
            android:textSize="@dimen/gout_tsize_56" />

        <TextView
            android:id="@+id/address_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/main_background"
            android:gravity="center"
            android:paddingRight="@dimen/space_40"
            android:text="保存"
            android:textColor="@color/mian_green"
            android:textSize="@dimen/gout_tsize_46" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_line" />

    <LinearLayout
        android:id="@+id/address_ls_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_60"
        android:paddingRight="@dimen/space_60">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收  件  人"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/space_46" />

            <EditText
                android:id="@+id/address_tv_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_120"
                android:layout_marginLeft="@dimen/space_40"
                android:background="@drawable/bg_edittext"
                android:hint="请输入您的姓名"
                android:paddingLeft="@dimen/space_30"
                android:textColorHint="@color/text_color_9" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/space_46" />

            <EditText
                android:id="@+id/address_tv_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_120"
                android:inputType="number"
                android:maxLength="11"
                android:layout_marginLeft="@dimen/space_40"
                android:background="@drawable/bg_edittext"
                android:hint="请输入您的电话"
                android:paddingLeft="@dimen/space_30"
                android:textColorHint="@color/text_color_9" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收件地址"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/space_46" />

            <EditText
                android:id="@+id/address_tv_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_120"
                android:layout_marginLeft="@dimen/space_40"
                android:background="@drawable/bg_edittext"
                android:hint="请输入您的地址"
                android:paddingLeft="@dimen/space_30"
                android:textColorHint="@color/text_color_9" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮政编码"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/space_46" />

            <EditText
                android:id="@+id/address_tv_youbian"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_120"
                android:inputType="number"
                android:maxLength="7"
                android:layout_marginLeft="@dimen/space_40"
                android:background="@drawable/bg_edittext"
                android:hint="请输入您的邮编"
                android:paddingLeft="@dimen/space_30"
                android:textColorHint="@color/text_color_9" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>