<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_142"
        android:background="@color/main_background">

        <ImageButton
            android:id="@+id/noun_btn_goback"
            android:layout_width="@dimen/space_120"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/go_back_brack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/main_background"
            android:gravity="center"
            android:text="发送帖子"
            android:textSize="@dimen/gout_tsize_56" />

        <TextView
            android:id="@+id/topic_tv_sendok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/main_background"
            android:gravity="center"
            android:paddingRight="@dimen/space_40"
            android:text="发布"
            android:textColor="@color/mian_green"
            android:textSize="@dimen/gout_tsize_46" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_40"
        android:paddingRight="@dimen/space_40">

        <EditText
            android:visibility="gone"
            android:id="@+id/topic_edt_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_390"
            android:background="@color/main_background"
            android:gravity="top|left"
            android:hint="输入您的主题，不得超过36个字"
            android:maxLength="36"
            android:paddingLeft="@dimen/space_18"
            android:paddingTop="@dimen/space_40"
            android:singleLine="false"
            android:textColorHint="@color/text_color_c" />


        <EditText
            android:id="@+id/topic_edt_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/space_40"
            android:layout_height="@dimen/space_780"
            android:background="@color/main_background"
            android:gravity="top|left"
            android:hint="输入您的帖子详情，最多600字"
            android:maxLength="600"
            android:paddingLeft="@dimen/space_18"
            android:paddingTop="@dimen/space_40"
            android:singleLine="false"
            android:textColorHint="@color/text_color_c" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/main_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_120"
            android:layout_marginTop="@dimen/space_40"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_18"
            android:text="加入图片："
            android:textColor="@color/text_color_6"
            android:textSize="@dimen/space_46" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/topic_img_1"
                android:layout_width="@dimen/space_200"
                android:layout_height="@dimen/space_200"
                android:background="@drawable/btn_upload_image_bg" />

            <ImageView
                android:id="@+id/topic_img_2"
                android:layout_width="@dimen/space_200"
                android:layout_height="@dimen/space_200"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/space_60"
                android:background="@drawable/btn_upload_image_bg" />

            <ImageView
                android:id="@+id/topic_img_3"
                android:layout_width="@dimen/space_200"
                android:layout_height="@dimen/space_200"
                android:layout_marginLeft="@dimen/space_60"
                android:visibility="gone"
                android:background="@drawable/btn_upload_image_bg" />

            <ImageView
                android:id="@+id/topic_img_4"
                android:layout_width="@dimen/space_200"
                android:layout_height="@dimen/space_200"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/space_60"
                android:background="@drawable/btn_upload_image_bg" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>