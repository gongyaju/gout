<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_142"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/topic_btn_goback"
            android:layout_width="@dimen/space_120"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/go_back_brack" />

        <TextView
            android:id="@+id/noun_btn_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="互动详情"
            android:textSize="@dimen/gout_tsize_56" />

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="@dimen/space_142"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:src="@drawable/btn_more_bg" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_bottom"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_50"
                    android:layout_marginRight="@dimen/space_50"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_210"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/topicdetail_img_icon"
                            android:layout_width="@dimen/space_150"
                            android:layout_height="@dimen/space_150"
                            android:src="@drawable/ic_setting_touxiang" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/space_40"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/topicdetail_tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="@color/mian_green"
                                android:textSize="@dimen/space_40" />

                            <TextView
                                android:id="@+id/topicdetail_tv_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_18"
                                android:lines="2"
                                android:text="--"
                                android:textColor="@color/text_color_3"
                                android:textSize="@dimen/space_40"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/topicdetail_tv_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="@color/text_color_6"
                                android:textSize="@dimen/space_40" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/main_line" />

                    <TextView
                        android:id="@+id/topicdetail_tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_18"
                        android:lines="2"
                        android:text="--"
                        android:textColor="@color/text_color_3"
                        android:textSize="@dimen/space_40" />

                    <LinearLayout
                        android:id="@+id/topicdetail_img_pic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />


                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_142"
                        android:paddingLeft="@dimen/space_30"
                        android:paddingRight="@dimen/space_30">

                        <TextView
                            android:id="@+id/topic_tv_read"
                            android:layout_width="@dimen/space_180"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/topic_read"
                            android:drawablePadding="@dimen/space_20"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="--"
                            android:textColor="@color/text_color_6"
                            android:textSize="@dimen/gout_tsize_46" />

                        <TextView
                            android:id="@+id/topic_tv_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/topic_tv_read"
                            android:layout_toRightOf="@+id/topic_tv_read"
                            android:drawableLeft="@drawable/icon_msg"
                            android:drawablePadding="@dimen/space_20"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="--"
                            android:textColor="@color/text_color_6"
                            android:textSize="@dimen/gout_tsize_46" />

                        <TextView
                            android:id="@+id/topic_tv_share"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:drawableLeft="@drawable/topic_toshare"
                            android:drawablePadding="@dimen/space_20"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="分享到"
                            android:textColor="@color/text_color_6"
                            android:textSize="@dimen/gout_tsize_46" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/main_line" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.pu.gouthelper.ui.MyListView
                            android:id="@+id/topic_ls_comment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></com.pu.gouthelper.ui.MyListView>

                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_160"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/edt_shape"
            android:gravity="center_vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/group_discuss_submit"
                android:layout_width="@dimen/space_180"
                android:layout_height="@dimen/space_100"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_40"
                android:background="@drawable/btn_login_bg"
                android:text="评论"
                android:textColor="@color/white"
                android:textSize="@dimen/space_46" />

            <EditText
                android:id="@+id/group_discuss"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/space_100"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_40"
                android:layout_marginRight="@dimen/space_40"
                android:layout_toLeftOf="@id/group_discuss_submit"
                android:background="@drawable/bg_edittext"
                android:hint="说点什么吧"
                android:paddingLeft="@dimen/space_40"
                android:singleLine="true"
                android:textSize="@dimen/space_40"
                android:windowSoftInputMode="stateVisible|adjustResize"></EditText>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>