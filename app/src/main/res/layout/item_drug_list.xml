<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/space_30"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:paddingTop="@dimen/space_20"
            android:paddingBottom="@dimen/space_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/drug_img_icon"
                android:layout_width="@dimen/space_260"
                android:layout_height="@dimen/space_260"
                android:layout_margin="@dimen/space_30"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/space_40">

                <TextView
                    android:id="@+id/drug_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_18"
                    android:text="111111111111"
                    android:textColor="@color/text_color_6"
                    android:textSize="@dimen/gout_tsize_46" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_20">

                    <ProgressBar
                        android:id="@+id/progressBar1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_80"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/progressbar" />

                    <TextView
                        android:id="@+id/progressBar1_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/space_80"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/space_20"
                        android:text="200人顶"
                        android:textColor="@color/white"
                        android:textSize="@dimen/space_36" />

                    <TextView
                        android:id="@+id/progressBar1_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/space_80"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/space_20"
                        android:text="200人踩"
                        android:textColor="@color/white"
                        android:textSize="@dimen/space_36" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/drug_tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_20"
                    android:lines="3"
                    android:text="111111111111"
                    android:textColor="@color/text_color_6"
                    android:textSize="@dimen/gout_tsize_36" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>