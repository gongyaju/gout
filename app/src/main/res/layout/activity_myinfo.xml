<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/space_142">

        <ImageButton
            android:id="@+id/break_btn_goback"
            android:layout_width="@dimen/space_142"
            android:layout_height="@dimen/space_142"
            android:background="@null"
            android:src="@drawable/go_back_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="个人信息"
            android:textColor="@color/text_color_6"
            android:textSize="@dimen/gout_tsize_56" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/myinfo_tv_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_180"
            android:layout_marginTop="@dimen/space_20"
            android:background="@drawable/list_item_selector"
            android:drawablePadding="@dimen/space_60"
            android:drawableRight="@drawable/ic_setting_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_60"
            android:paddingRight="@dimen/space_60"
            android:text="头像"
            android:textColor="@color/text_color_6"
            android:textSize="@dimen/gout_tsize_46" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="gone"
            android:background="@drawable/list_view_divider" />

        <TextView
            android:id="@+id/myinfo_tv_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_180"
            android:background="@drawable/list_item_selector"
            android:drawablePadding="@dimen/space_60"
            android:drawableRight="@drawable/ic_setting_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_60"
            android:paddingRight="@dimen/space_60"
            android:text="名称"
            android:visibility="gone"
            android:textColor="@color/text_color_6"
            android:textSize="@dimen/gout_tsize_46" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/list_view_divider" />

        <TextView
            android:id="@+id/myinfo_tv_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_180"
            android:background="@drawable/list_item_selector"
            android:drawablePadding="@dimen/space_60"
            android:drawableRight="@drawable/ic_setting_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_60"
            android:paddingRight="@dimen/space_60"
            android:text="地址"
            android:textColor="@color/text_color_6"
            android:textSize="@dimen/gout_tsize_46" />


    </LinearLayout>


</LinearLayout>