<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fitsSystemWindows="false">

    <RelativeLayout
        android:id="@+id/history_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_180"
        android:background="@color/mian_green">

        <ImageButton
            android:id="@+id/history_btn_goback"
            android:layout_width="@dimen/space_120"
            android:paddingTop="@dimen/space_30"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/go_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingTop="@dimen/space_40"
            android:text="痛风助手"
            android:textColor="@color/white"
            android:textSize="@dimen/gout_tsize_56" />

        <ImageButton
            android:id="@+id/topic_btn_send"
            android:layout_width="@dimen/space_150"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingTop="@dimen/space_40"
            android:src="@drawable/btn_more_bg"
            android:visibility="gone" />
    </RelativeLayout>

    <WebView
        android:id="@+id/gout_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/history_rl"></WebView>
</RelativeLayout>