<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mian_green"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_30"
        android:paddingTop="@dimen/space_60">

        <EditText
            android:id="@+id/purin_edt_search"
            android:layout_width="800px"
            android:layout_height="@dimen/space_120"
            android:layout_marginLeft="@dimen/space_18"
            android:background="@drawable/bg_edittext"
            android:drawableLeft="@drawable/icon_search"
            android:drawablePadding="@dimen/space_20"
            android:gravity="center_vertical"
            android:hint="输入你想知道的嘌呤含量的食物名称"
            android:paddingLeft="@dimen/space_30"
            android:singleLine="true"
            android:textColor="@color/text_color_9"
            android:textColorHint="@color/text_color_c"
            android:textSize="@dimen/gout_tsize_40" />

        <TextView
            android:id="@+id/search_tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_40"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/gout_tsize_46" />
    </LinearLayout>

    <ListView
        android:id="@+id/purin_ls_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>