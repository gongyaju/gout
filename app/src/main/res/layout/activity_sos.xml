<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_slate"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space_50"
        android:layout_marginRight="@dimen/space_50"
        android:orientation="vertical">

        <TextView
            android:id="@+id/login_btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_180"
            android:gravity="center"
            android:text="本处理办法仅限于痛风病史2年以内"
            android:textColor="@drawable/btn_color_bg"
            android:textSize="@dimen/space_50" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="@dimen/space_40"
            android:background="@color/mian_green" />

        <ListView
            android:id="@+id/sos_ls_show"
            android:clickable="false"
            android:divider="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="@dimen/space_80"
            android:background="@color/mian_green" />

        <ImageButton
            android:id="@+id/sos_btn_close"
            android:layout_width="@dimen/space_120"
            android:layout_height="@dimen/space_120"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_120"
            android:background="@null"
            android:src="@drawable/btn_sos_close_bg" />
    </LinearLayout>


</LinearLayout>