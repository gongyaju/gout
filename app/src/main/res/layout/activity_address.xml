<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/space_40"
        android:layout_height="@dimen/space_180"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/address_btn_goback"
            android:layout_width="@dimen/space_120"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/go_back_brack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="我的地址"
            android:textSize="@dimen/gout_tsize_56" />

        <ImageButton
            android:id="@+id/address_btn_add"
            android:layout_width="@dimen/space_150"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/keyao_add" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_line" />

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/address_ls_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/space_60"
        android:paddingRight="@dimen/space_60"
        android:background="@color/white" />

</LinearLayout>