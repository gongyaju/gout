<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/input_comment_dialog_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/input_comment_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></ScrollView>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#888888" />

    <LinearLayout
        android:id="@+id/input_comment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#efefef"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:visibility="visible">

        <EditText
            android:id="@+id/input_comment"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/space_100"
            android:layout_marginRight="@dimen/space_40"
            android:focusable="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_40"
            android:background="@drawable/bg_edittext"
            android:hint="说点什么吧"
            android:paddingLeft="@dimen/space_40"
            android:singleLine="true"
            android:textSize="@dimen/space_40" />

        <TextView
            android:id="@+id/btn_publish_comment"
            android:layout_width="@dimen/space_180"
            android:layout_height="@dimen/space_100"
            android:background="@drawable/btn_login_bg"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="@dimen/space_40" />
    </LinearLayout>
</LinearLayout>