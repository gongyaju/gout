<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_142"
        android:background="@color/main_background">

        <ImageButton
            android:id="@+id/drug_btn_goback"
            android:layout_width="@dimen/space_120"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/go_back_brack" />

        <TextView
            android:id="@+id/drug_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:gravity="center"
            android:text="药品详情"
            android:textSize="@dimen/gout_tsize_56" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_line" />

    <ImageView
        android:id="@+id/drug_img_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_400" />

    <LinearLayout
        android:id="@+id/drug_liner_vs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/space_60"
            android:paddingRight="@dimen/space_60"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_40">

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_80"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progressbar" />

            <TextView
                android:id="@+id/progressBar1_text1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_80"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_20"
                android:text="200人顶"
                android:textColor="@color/white"
                android:textSize="@dimen/space_36" />

            <TextView
                android:id="@+id/progressBar1_text2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_80"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/space_20"
                android:text="200人踩"
                android:textColor="@color/white"
                android:textSize="@dimen/space_36" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/space_40"
            android:paddingLeft="@dimen/space_60"
            android:paddingRight="@dimen/space_60">

            <Button
                android:id="@+id/drug_btn_zan"
                android:layout_width="@dimen/space_340"
                android:layout_height="@dimen/space_130"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_zan_bg"
                android:drawableLeft="@drawable/icon_zan"
                android:drawablePadding="@dimen/space_80_minus"
                android:gravity="center"
                android:paddingLeft="@dimen/space_90"
                android:text="--"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/space_36" />

            <Button
                android:id="@+id/drug_btn_cai"
                android:layout_width="@dimen/space_340"
                android:layout_height="@dimen/space_130"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/drug_btn_zan"
                android:background="@drawable/btn_zan_bg"
                android:drawableLeft="@drawable/icon_cai"
                android:drawablePadding="@dimen/space_80_minus"
                android:gravity="center"
                android:paddingLeft="@dimen/space_90"
                android:text="--"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/space_36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="VS"
                android:textColor="@color/text_color_9"
                android:textSize="@dimen/space_36" />
        </RelativeLayout>

        <View
            android:layout_marginTop="@dimen/space_40"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/space_60"
            android:layout_marginRight="@dimen/space_60"
            android:background="@color/main_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_190"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_60"
            android:paddingRight="@dimen/space_60">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="参考价格："
                android:textSize="@dimen/space_46" />

            <TextView
                android:id="@+id/drug_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView"
                android:layout_toRightOf="@+id/textView"
                android:text="--"
                android:textColor="@color/mian_red"
                android:textSize="@dimen/space_56" />

            <Button
                android:id="@+id/drug_btn_buy"
                android:layout_width="@dimen/space_300"
                android:layout_height="@dimen/space_90"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_buy_bg"
                android:text="马上购买"
                android:textColor="@color/white"
                android:textSize="@dimen/space_40" />
        </RelativeLayout>


    </LinearLayout>

    <com.pu.gouthelper.ui.tabstrip.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_142"
        android:layout_below="@+id/purin_tv_sc"
        android:layout_marginTop="@dimen/space_20"
        android:background="@color/main_background"
        app:pstsDividerColor="@color/main_line"
        app:pstsIndicatorColor="@color/mian_green"
        app:pstsIndicatorHeight="8px"
        app:pstsTabPaddingLeftRight="@dimen/space_150"
        app:pstsUnderlineColor="@color/gray_light"
        app:pstsUnderlineHeight="8px"
        app:selectedTabTextColor="@color/mian_green"
        app:tabTextColor="@color/black"
        app:tabTextSize="@dimen/gout_tsize_46" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabs" />
</LinearLayout>