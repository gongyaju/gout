<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/space_40"
        android:layout_height="@dimen/space_180"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/recipe_btn_goback"
            android:layout_width="@dimen/space_120"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/go_back_brack" />

        <TextView
            android:id="@+id/recipe_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="完善资料"
            android:textColor="@color/mian_green"
            android:textSize="@dimen/gout_tsize_56" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_60"
        android:paddingRight="@dimen/space_60"
        android:paddingTop="@dimen/space_100">

        <TextView
            android:id="@+id/infomation_tv_moblie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/text_color_6"
            android:textSize="@dimen/space_46" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/space_46" />

            <EditText
                android:id="@+id/infomation_tv_nikename"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_120"
                android:layout_marginLeft="@dimen/space_40"
                android:background="@drawable/bg_edittext"
                android:hint="请输入您的昵称"
                android:paddingLeft="@dimen/space_30"
                android:textColorHint="@color/text_color_9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/space_46" />

            <RadioGroup
                android:id="@+id/infomation_rg_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_120"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/infomation_rb_1"
                    android:layout_width="@dimen/space_300"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_40"
                    android:button="@drawable/checkbox_bg"
                    android:checked="true"
                    android:paddingLeft="@dimen/space_40"
                    android:text="男性"
                    android:textColor="@color/text_color_6"
                    android:textSize="@dimen/space_46" />

                <RadioButton
                    android:id="@+id/infomation_rb_2"
                    android:layout_width="@dimen/space_300"
                    android:layout_height="match_parent"
                    android:button="@drawable/checkbox_bg"
                    android:paddingLeft="@dimen/space_40"
                    android:text="女性"
                    android:textColor="@color/text_color_6"
                    android:textSize="@dimen/space_46" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生日"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/space_46" />

            <TextView
                android:id="@+id/infomation_tv_birthday"
                android:layout_width="@dimen/space_300"
                android:layout_height="@dimen/space_120"
                android:layout_marginLeft="@dimen/space_40"
                android:background="@drawable/bg_edittext"
                android:drawableRight="@drawable/xiangxia"
                android:gravity="center|left"
                android:paddingLeft="@dimen/space_30"
                android:paddingRight="@dimen/space_40"
                android:singleLine="true"
                android:text="请选择"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/space_46" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_90"
                android:text="病史"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/space_46" />
            <EditText
                android:id="@+id/infomation_tv_history"
                android:layout_width="@dimen/space_300"
                android:layout_height="@dimen/space_120"
                android:layout_marginLeft="@dimen/space_40"
                android:background="@drawable/bg_edittext"
                android:gravity="center|left"
                android:hint="年"
                android:inputType="number"
                android:maxLength="3"
                android:paddingLeft="@dimen/space_30"
                android:paddingRight="@dimen/space_40"
                android:singleLine="true"
                android:textColor="@color/text_color_6"
                android:textColorHint="@color/text_color_c"
                android:textSize="@dimen/space_46" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身高"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/space_46" />

            <EditText
                android:id="@+id/infomation_edt_height"
                android:layout_width="@dimen/space_300"
                android:layout_height="@dimen/space_120"
                android:layout_marginLeft="@dimen/space_40"
                android:background="@drawable/bg_edittext"
                android:inputType="number"
                android:gravity="center|left"
                android:hint="cm"
                android:maxLength="3"
                android:paddingLeft="@dimen/space_30"
                android:paddingRight="@dimen/space_40"
                android:singleLine="true"
                android:textColor="@color/text_color_6"
                android:textColorHint="@color/text_color_c"
                android:textSize="@dimen/space_46" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_90"
                android:text="体重"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/space_46" />

            <EditText
                android:id="@+id/infomation_edt_weight"
                android:layout_width="@dimen/space_300"
                android:layout_height="@dimen/space_120"
                android:layout_marginLeft="@dimen/space_40"
                android:background="@drawable/bg_edittext"
                android:gravity="center|left"
                android:hint="kg"
                android:maxLength="3"
                android:inputType="number"
                android:paddingLeft="@dimen/space_30"
                android:paddingRight="@dimen/space_40"
                android:singleLine="true"
                android:textColor="@color/text_color_6"
                android:textColorHint="@color/text_color_c"
                android:textSize="@dimen/space_46" />
        </LinearLayout>

        <TextView
            android:id="@+id/infomation_tv_pain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_120"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/space_30"
            android:background="@drawable/bg_edittext"
            android:drawableRight="@drawable/ic_setting_arrow"
            android:gravity="center|left"
            android:paddingLeft="@dimen/space_40"
            android:paddingRight="@dimen/space_60"
            android:text="选择病症疼痛区域"
            android:textColor="@color/text_color_6"
            android:textSize="@dimen/space_46" />

        <TextView
            android:id="@+id/infomation_tv_drug"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_120"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/space_30"
            android:background="@drawable/bg_edittext"
            android:drawableRight="@drawable/ic_setting_arrow"
            android:gravity="center|left"
            android:paddingLeft="@dimen/space_40"
            android:paddingRight="@dimen/space_60"
            android:text="服用过的药物"
            android:textColor="@color/text_color_6"
            android:textSize="@dimen/space_46" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_30"
            android:text="为了帮助您更好的了解病情，请您一定要全部填写，谢谢！"
            android:textColor="@color/text_color_9"
            android:textSize="@dimen/space_40" />

        <Button
            android:id="@+id/infomation_btn_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_120"
            android:layout_marginTop="@dimen/space_180"
            android:background="@drawable/btn_login_bg"
            android:text="提交资料"
            android:textColor="#ffffffff"
            android:textSize="@dimen/space_50" />
    </LinearLayout>

</LinearLayout>